{
  "name": "gift",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "configs/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --color",
    "predev": "npm run docker",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "docker": "docker-compose -f ./configs/docker/docker-compose.development.yml up -d",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "turbo": "^1.3.1"
  }
}
